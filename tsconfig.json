{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES6", //Cho phép biên dịch code typescript sang kiểu ES6
        "module": "commonjs", //
        "removeComments": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
    },
    "include": ["*.ts"], // Bao gồm tất cả các file TypeScript (.ts) trong thư mục gốc
    "exclude": ["node_modules"] // Không biên dịch các file trong thư mục node_modules
}   